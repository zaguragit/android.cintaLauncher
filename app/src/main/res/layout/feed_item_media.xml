<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <io.posidon.android.cintalauncher.ui.view.BackdropImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"/>
    <LinearLayout
        style="@style/Theme.CintaLauncher.FeedCard.CardBehind"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/feed_card_padding_vertical"/>
        <LinearLayout
            style="@style/Theme.CintaLauncher.FeedCard.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                style="@style/Theme.CintaLauncher.FeedCard.SourceIcon"
                android:id="@+id/icon"/>
            <TextView
                style="@style/Theme.CintaLauncher.FeedCard.Source"
                android:id="@+id/source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                style="@style/Theme.CintaLauncher.FeedCard.Time"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            style="@style/Theme.CintaLauncher.FeedCard.Title"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/Theme.CintaLauncher.FeedCard.Description"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/button_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_track_previous"/>
            <ImageView
                android:id="@+id/button_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_play"
                android:layout_marginHorizontal="8dp"/>
            <ImageView
                android:id="@+id/button_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_track_next"/>
        </LinearLayout>
        <include layout="@layout/feed_item_actions"
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>